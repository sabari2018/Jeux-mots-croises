<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="vbox" prefHeight="500" prefWidth="550" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sadou.clement.controleur.ControleurVuePrincipal">


    <MenuBar fx:id="menuBar">

        <menus>
            <Menu text="Options">
                <MenuItem fx:id="menuChoixAleatoire" text="Grille Aleatoire">

                </MenuItem>
                <MenuItem fx:id="menuChoixManuelle" text="Choix de la grille">

                </MenuItem>

                <MenuItem fx:id="menuQuitter" text="Quitter">

                </MenuItem>
            </Menu>

        </menus>
    </MenuBar>

    <BorderPane>
      <center>
         <Label contentDisplay="CENTER" text="Jeu de Mots Croises" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
               <Font size="25.0" />
            </font>
            <BorderPane.margin>
               <Insets bottom="10.0" />
            </BorderPane.margin>
         </Label>
      </center>
      <bottom>
         <ImageView fitHeight="600.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
               <Image url="@img/background1.jpg" />
            </image></ImageView>
      </bottom>
      <VBox.margin>
         <Insets top="11.0" />
      </VBox.margin></BorderPane>

    <Button fx:id="btnQuitter" text="Quitter" visible="false">
    </Button>
   <BorderPane>
      <right>
         <Button mnemonicParsing="false" text="Quitter" BorderPane.alignment="CENTER" fx:id="btnQ">
            <BorderPane.margin>
               <Insets bottom="10.0" right="10.0" />
            </BorderPane.margin>
         </Button>
      </right>
   </BorderPane>
   
</VBox>
